<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raghavi.math_quiz.Game_Screen">

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="timer"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="Please click on the START button to continue"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/opt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ques"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="ans1" />

    <Button
        android:id="@+id/opt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/opt1"
        android:layout_alignStart="@+id/opt1"
        android:layout_below="@+id/opt1"
        android:layout_marginTop="32dp"
        android:text="ans2" />

    <Button
        android:id="@+id/opt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/opt2"
        android:layout_alignStart="@+id/opt2"
        android:layout_below="@+id/opt2"
        android:layout_marginTop="32dp"
        android:text="ans3" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/opt3"
        android:layout_alignStart="@+id/opt3"
        android:layout_below="@+id/opt3"
        android:layout_marginTop="33dp"
        android:text="NEXT" />

    <TextView
        android:id="@+id/message"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />
</RelativeLayout>
